<p id="notice"><%= notice %></p>

<h1>Звонки</h1>

<table>
  <thead>
    <tr>
      <th>Продолжительность</th>
      <th>Оплачен</th>
      <th>Время вызова</th>
      <th>Город</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.duration%> minutes</td>
        <% if call.payment_state %>
          <td style="color: green;">Оплачен</td>
        <% else %>
          <td style="color: red;">Не оплачен</td>
        <% end %>
        <td><%= call.time.strftime("%d.%m.%Y %H:%M") %></td>
        <td><%= call.city %></td>
        <td><%= link_to 'Править', edit_call_path(call) %></td>
        <td><%= link_to 'Удалить', call, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый звонок', new_call_path %>
