<%= form_with(model: call, local: true) do |form| %>
  <% if call.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(call.errors.count, "error") %> prohibited this call from being saved:</h2>

      <ul>
        <% call.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Продолжительность" %>
    <%= form.number_field :duration %>
  </div>

  <div class="field">
    <%= form.label "Время" %>
    <%= form.datetime_select :time %>
  </div>

  <div class="field">
    <%= form.label "Город" %>
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.label "Номер телефона" %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="actions">
    <%= form.submit "Подтвердить" %>
  </div>
<% end %>
