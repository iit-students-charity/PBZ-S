<p id="notice"><%= notice %></p>

<h1>Пользователи</h1>

<table>
  <thead>
    <tr>
      <th>Номер телефона</th>
      <th>Имя</th>
      <th>Фамилия</th>
      <th>Отчество</th>
      <th>Адрес</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.phone_number %></td>
        <td><%= user.surname %></td>
        <td><%= user.name %></td>
        <td><%= user.patronymic %></td>
        <td><%= user.adress %></td>        
        <td><%= link_to 'Показать', user_path(user.id) %>
        <td><%= link_to 'Править', edit_user_path(user) %></td>
        <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый пользователь', new_user_path %>
