<p id="notice"><%= notice %></p>

<h1>Тарифы</h1>

<table>
  <thead>
    <tr>
      <th>Город</th>
      <th>Цена</th>
      <th>Льготная цена</th>
      <th>Действует до:</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tariffs.each do |tariff| %>
      <tr>
        <td><%= tariff.city %></td>
        <td><%= tariff.price %></td>
        <td><%= tariff.special_price %></td>
        <td><%= tariff.expire_date %></td>
        <td><%= link_to 'Править', edit_tariff_path(tariff) %></td>
        <td><%= link_to 'Удалить', tariff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый тариф', new_tariff_path %>
